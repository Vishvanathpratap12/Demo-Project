	    <%- include('../common/header') %>
		<!-- //header-ends -->
		
        <div id="page-wrapper">
            <div class="main-page">
                <div class="forms validation">

                    <div class=" form-grids row form-grids-right">
                        <div class="widget-shadow " data-example-id="basic-forms">
                            <div class="form-title">
                                <h4>Add New Media File </h4>
                            </div>
                            <div class="form-body">


                                <% if( msgType && message ) { %>
								
                                    <div class="alert alert-danger alert-dismissible">
                                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                        <strong><%= msgType %>! </strong>
                                        <%= message %>
                                    </div>
    
                                <% }%>






                                            <form class="form-horizontal" action="/media-files-add" method="POST" enctype="multipart/form-data">

                                                <div class="form-group">
                                                    <label for="fileType" class="col-sm-2 control-label">File Type</label>
                                                    <div class="col-sm-8">
                                                        <select name="fileType" id="fileType" class="form-control1" required="">
                                                            <option value="">Select File Type</option>
                                                            <option value="image">Image</option>
                                                            <option value="video">Video</option>
                                                            <option value="pdf">PDF</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                
                                                <div class="form-group">
                                                    <label for="mediaFile" class="col-sm-2 control-label">File </label>
                                                    <div class="col-sm-8">
                                                        <input type="file" id="mediaFile"  name="mediaFile" required="">
                                                    </div>
                                                </div>
                                                
                                                
                                                <div class="col-sm-offset-2"> <button type="submit" class="btn btn-default">Upload</button> </div>
                                            </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


